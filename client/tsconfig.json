{
  "compilerOptions": {
    "target": "ES6", // Set the target ECMAScript version
    "module": "ESNext", // Specify module code generation
    "jsx": "preserve", // Support JSX in React
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with ES module systems
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./build", // Directory to output compiled files
    "rootDir": "./src" // Root directory of input files
  },
  "include": ["src"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"] // Exclude the node_modules directory
}
